{
  "name": "jira-beads-sync-helpers",
  "version": "3.0.11",
  "description": "Workflow automation for Jira-Beads sync with CI/CD support",
  "scripts": {
    "onboard": "node scripts/onboard.js",
    "sync": "node run.js sync",
    "start": "node run.js start",
    "finish": "node run.js finish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:python": "pytest tests/test_sync_python.py -v || echo 'pytest not installed - skipping Python tests'",
    "test:platform": "bash tests/platform/test-macos.sh || bash tests/platform/test-linux.sh || pwsh tests/platform/test-windows.ps1",
    "config": "node run.js config",
    "sync-pr-templates": "node scripts/sync-pr-templates.js",
    "check-pr-templates": "node scripts/sync-pr-templates.js --check",
    "bitbucket:check": "node scripts/bitbucket-pr-defaults.js check",
    "bitbucket:setup": "node scripts/bitbucket-pr-defaults.js setup",
    "lint": "eslint *.js scripts/*.js",
    "lint:fix": "eslint *.js scripts/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:dry": "standard-version --dry-run"
  },
  "keywords": [
    "jira",
    "beads",
    "workflow",
    "automation",
    "mcp"
  ],
  "author": "Your Organization",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.0",
    "standard-version": "^9.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
